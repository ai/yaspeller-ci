{
  "name": "yaspeller-ci",
  "version": "1.0.0",
  "description": "Fast spelling check for Travis CI",
  "keywords": [
    "spelling",
    "spellcheck",
    "typo",
    "yaspeller",
    "travis",
    "appveyor",
    "ci"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/yaspeller-ci",
  "bin": "./bin.js",
  "dependencies": {
    "ci-job-number": "^0.3.0",
    "yaspeller": ">=5.1.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.1",
    "clean-publish": "^1.1.2",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "node ./bin.js README.md CHANGELOG.md",
    "lint": "eslint-ci *.js",
    "test": "yarn run lint && yarn run spellcheck"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "global-require": "off"
    }
  },
  "lint-staged": {
    "*.md": "./bin.js",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "yaspeller",
      "CI",
      "CLI",
      "JSDoc",
      "Travis",
      "js",
      "npm",
      "AppVeyor",
      "CircleCI"
    ]
  }
}
